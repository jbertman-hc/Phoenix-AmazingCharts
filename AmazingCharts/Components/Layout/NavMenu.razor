<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Main</MudText>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="patients" Icon="@Icons.Material.Filled.People">Patients</MudNavLink>
    <MudNavLink Href="schedule" Icon="@Icons.Material.Filled.CalendarToday">Schedule</MudNavLink>
    <MudNavLink Href="messages" Icon="@Icons.Material.Filled.Email">Messages</MudNavLink>
    
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3 mt-4">Clinical</MudText>
    <MudNavLink Href="encounters" Icon="@Icons.Material.Filled.MedicalServices">Encounters</MudNavLink>
    <MudNavLink Href="labs" Icon="@Icons.Material.Filled.Science">Lab Results</MudNavLink>
    <MudNavLink Href="medications" Icon="@Icons.Material.Filled.Medication">Medications</MudNavLink>
    <MudNavLink Href="orders" Icon="@Icons.Material.Filled.Assignment">Orders</MudNavLink>
    
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3 mt-4">Administrative</MudText>
    <MudNavLink Href="billing" Icon="@Icons.Material.Filled.Receipt">Billing & Claims</MudNavLink>
    <MudNavLink Href="reports" Icon="@Icons.Material.Filled.BarChart">Reports</MudNavLink>
    <MudNavLink Href="settings" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
